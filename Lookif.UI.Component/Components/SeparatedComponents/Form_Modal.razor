@namespace Lookif.UI.Component.Components.SeparatedComponents
@using Lookif.UI.Component.Components.SeparatedComponents.SimpleForm


@using System.Globalization
@using Microsoft.Extensions.Localization;
@using Microsoft.Extensions.Localization;
@using Lookif.UI.Component.Resources
@inject IStringLocalizer<Resource> basicResource
@if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft)
{



    <style>
        .ChangeDirection {
            direction: rtl;
        }

        .FormAlign {
            float: right;
        }
    </style>
}
else
{
    <style>
        .FormAlign {
            float: left;
        }
    </style>
}
<style>
    h3 {
        font-family: 'IranSansBold'
    }

    .blazored-modal-close span {
        font-size: xx-large
    }

    .blazored-modal-close {
        padding: 0 10px 0 0;
    }
</style>




<div class="IranSansBold ChangeDirection" style="width: 80vw;">

    <Form Dto="@MyTItem" Key="@MyKey" OnFinished="MyOnFinished" Resource="Resource"></Form>



</div>