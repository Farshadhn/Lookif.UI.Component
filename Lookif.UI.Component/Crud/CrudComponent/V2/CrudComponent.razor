@namespace Lookif.UI.Component.Crud.CrudComponent.V2
@using Lookif.UI.Component.Components.SeparatedComponents.SimpleForm
@using Lookif.UI.Component.Grids.V2
@typeparam TItem
@typeparam TSelectItem

@using System.Globalization
@using Microsoft.Extensions.Localization;
@using Lookif.UI.Component.Resources
@inject IStringLocalizer<Resource> basicResource
@{
    var relatedSource = ((IStringLocalizer)Resource)?.GetAllStrings()?.ToList();

}
<div class="PatialContent PF shadow-sm px-2">


    <div class="PatialContentTitle">
        <div>

            @basicResource["GridTitle"]  @FormName 
        </div>
        <div class="PatialContentInsertNew" @onclick="InsertNew">

            @basicResource["InsertNew"]
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 3.33334V12.6667" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M3.33334 8H12.6667" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>

        </div>
    </div>

    <GridView DeleteBtn="DeleteBtn" TSelectItem="TSelectItem" TItem="TItem" FormName="@FormName" Records="@Records" OnFinished="Bind" Resource="Resource" OnDeleteFinished="OnDeleteFinished"></GridView>
</div>