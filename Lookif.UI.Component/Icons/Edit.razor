@namespace Lookif.UI.Component.Icons

@{
    string finalStyle = string.IsNullOrEmpty(Style) ? DefaultStyle : Style;
    if (!OnClickCallback.HasDelegate)
    {
        finalStyle += "; cursor: default;";
    }
}

<svg class="@CssClass"
     style="@finalStyle"
     xmlns="http://www.w3.org/2000/svg"
     width="@Width"
     height="@Height"
     viewBox="0 0 24 24"
     fill="none"
     stroke="currentColor"
     stroke-width="2"
     stroke-linecap="round"
     stroke-linejoin="round"
     @onclick="@OnClickCallback">
    <path d="M4 20h4l10.5-10.5a2.828 2.828 0 0 0-4-4L4 16v4z" />
    <path d="M14 6l4 4" />
</svg>

@code {
    [Parameter]
    public string CssClass { get; set; } = "";

    [Parameter]
    public string Style { get; set; } = "";

    [Parameter]
    public string Width { get; set; } = "25";

    [Parameter]
    public string Height { get; set; } = "25";

    [Parameter]
    public EventCallback OnClickCallback { get; set; }

    private string DefaultStyle => "cursor: pointer; display: inline-flex; align-items: center; justify-content: center; color: #007bff;";
}